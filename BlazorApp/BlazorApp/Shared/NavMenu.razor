<div class="top-row pl-4 navbar navbar-dark">
    <img class="logo" src="/images/logo.png"/>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
                <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @Localizer["Home"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="inventory">
                <span class="oi oi-grid-three-up" aria-hidden="true"></span> @Localizer["Inventory"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="craft">
                <span class="oi oi-puzzle-piece" aria-hidden="true"></span> @Localizer["Crafting"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="list">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @Localizer["Mods"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="logs">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @Localizer["Logs"]
            </NavLink>
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
